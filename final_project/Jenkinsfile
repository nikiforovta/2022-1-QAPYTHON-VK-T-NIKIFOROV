pipeline {
  agent any
  stages {
     stage("Build image") {
        steps {
    	catchError {
      	   script {
        	      docker.build("python-tests", "-f ./final_project/tests/Dockerfile .")
      	     }
          }
       }
    }
     stage('Pull browser') {
        steps {
           catchError {
              script {
      	    docker.image('selenoid/chrome:99.0')
      	      }
           }
        }
    }
     stage('Run UI tests') {
        steps {
           catchError {
              script {
          	     docker.image('aerokube/selenoid:latest-release').withRun('-p 4444:4444 -v /run/docker.sock:/var/run/docker.sock -v /mnt/c/ProgramData/Jenkins/.jenkins/workspace/Final_project/final_project/selenoid_config/:/etc/selenoid/',
            	'-timeout 600s -limit 2') { c ->
              	docker.image('python-tests').inside("--link ${c.id.tokenize(' ')[-1]}:selenoid") {
                    	sh "pytest -n 2 ${UI_TESTS_PATH}"
                	    }
                   }
        	     }
      	    }
         }
     }
     stage('Run API tests') {
        steps {
           catchError {
              script {
                docker.image('python-tests').inside {
                      sh "pytest -n 2 --reruns 1 ${API_TESTS_PATH}"
                      }
        	    }
      	    }
         }
     }
     stage('Reports') {
        steps {
           allure([
      	   includeProperties: false,
      	   jdk: '',
      	   properties: [],
      	   reportBuildPolicy: 'ALWAYS',
      	   results: [[path: 'allure_report']]
    	   ])
  	        }
         }
     }
}